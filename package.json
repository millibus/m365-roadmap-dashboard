{
  "name": "m365-roadmap-dashboard",
  "version": "1.0.0",
  "description": "A modern, responsive web dashboard for visualizing Microsoft 365's public roadmap data",
  "main": "index.html",
  "scripts": {
    "start": "npx serve . -p 8000",
    "dev": "npx serve . -p 8000 --reload",
    "update-data": "node scripts/update-data.js",
    "update": "scripts/update.sh",
    "update-deploy": "scripts/update.sh --deploy",
    "build": "node scripts/update-data.js",
    "preflight": "node scripts/preflight.js",
    "test:unit": "node tests/unit/update-data.test.js && node tests/unit/app-filters.test.js",
    "test": "npm run test:unit && node scripts/test-setup.js",
    "validate": "node scripts/validate-data.js",
    "health:check": "node scripts/health-check.js",
    "lint": "node scripts/lint.js",
    "security:policy": "node scripts/security-policy-check.js",
    "security:audit": "npm install --package-lock-only --ignore-scripts --no-audit --fund=false && npm audit --omit=dev --audit-level=high",
    "security:scan": "npm run security:policy && npm run security:audit",
    "ci": "npm run validate && npm run health:check && npm test && npm run lint && npm run security:scan"
  },
  "keywords": [
    "microsoft-365",
    "roadmap",
    "dashboard",
    "visualization",
    "github-pages",
    "static-site",
    "responsive",
    "m365"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/millibus/m365-roadmap-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/millibus/m365-roadmap-dashboard/issues"
  },
  "homepage": "https://millibus.github.io/m365-roadmap-dashboard/",
  "devDependencies": {},
  "dependencies": {},
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ]
}